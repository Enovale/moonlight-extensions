{
  "$schema": "https://moonlight-mod.github.io/manifest.schema.json",
  "id": "typingTweaks",
  "version": "1.0.0",
  "apiLevel": 2,
  "meta": {
    "name": "Typing Tweaks",
    "tagline": "Show avatars and role colours in the typing indicator",
    "description": "Ported from [this Vencord plugin](https://github.com/Vendicated/Vencord/tree/main/src/plugins/typingTweaks)",
    "authors": ["zt", "Enova"],
    "donate": "https://ko-fi.com/enovale",
    "source": "https://github.com/Enovale/moonlight-extensions/tree/main/src/typingTweaks"
  },
  "dependencies": ["spacepack", "common"],
  "settings": {
    "showAvatars": {
      "displayName": "Show Avatars",
      "description": "Show avatars in the typing indicator",
      "type": "boolean",
      "default": true,
      "advice": "reload"
    },
    "showRoleColors": {
      "displayName": "Show Role Colors",
      "description": "Show role colors in the typing indicator",
      "type": "boolean",
      "default": true,
      "advice": "reload"
    },
    "alternativeFormatting": {
      "displayName": "Alternative Formatting",
      "description": "Show a more useful message when several users are typing",
      "type": "boolean",
      "default": true,
      "advice": "reload"
    }
  }
}
