{
  "$schema": "https://moonlight-mod.github.io/manifest.schema.json",
  "id": "customChatButtons",
  "version": "1.0.0",
  "apiLevel": 2,
  "meta": {
    "name": "Custom Chat Buttons",
    "tagline": "Modular port of meow, or bark from Vencord",
    "description": "TODO",
    "authors": ["Enova"],
    "donate": "https://ko-fi.com/enovale",
    "source": "https://github.com/Enovale/moonlight-extensions/tree/main/src/customChatButtons"
  },
  "dependencies": ["spacepack", "settings", "common", "contextMenu", "componentEditor"],
  "settings": {
    "buttonList": {
      "displayName": "Move Title Bar Buttons",
      "description": "Move the buttons available in the title bar somewhere else",
      "type": "custom",
      "default": "default",
      "advice": "none"
    },
    "sendOnChange": {
      "displayName": "Send On Button Change",
      "description": "If enabled, sends the associated message when you switch to a different button",
      "type": "boolean",
      "default": false,
      "advice": "none"
    }
  }
}
